@model Game


<p class="Subtext-battle"><strong>First To @Model.WinPoint Points Wins The Game!</strong></p>
<div class="row-battle">
    <div>
        <img src="https://thumbs.dreamstime.com/b/user-profile-avatar-icon-134114292.jpg" alt="Image 1" class="opp-image-battle" />
        <p><strong>@Model.UserName Score:</strong> @Model.UserScore</p>
    </div>
    <div>
        <img src="@Model.OppImage" alt="Image 1" class="opp-image-battle" />
        <p><strong>@Model.OppName Score:</strong> @Model.OppScore</p>
    </div>
</div>
<p>@ViewBag.CorrectAnswer</p>
@if(ViewBag.Path == 1)
{
    <div class="question-prompt">
    <p><strong>@Model.UserName's Turn!</strong></p>
    <p><strong>Subject:</strong> @ViewBag.Subject</p>
    <p><strong>Question:</strong> @ViewBag.Question</p>

    @using (Html.BeginForm("ResultForRedemptionQuestion", "Play", FormMethod.Post))
    {
        <input type="hidden" name="oppID" value="@Model.OppID" />
        <input type="hidden" name="winPoint" value="@Model.WinPoint" />
        <input type="hidden" name="userName" value="@Model.UserName" />
        <input type="hidden" name="oppName" value="@Model.OppName" />
        <input type="hidden" name="oppScore" value="@Model.OppScore" />
        <input type="hidden" name="userScore" value="@Model.UserScore" />
        <input type="hidden" name="totalQuestionNumber" value="@Model.TotalQuestionNumber" />
        <input type="hidden" name="subject" value="@ViewBag.Subject" />
        <input type="hidden" name="question" value="@ViewBag.Question" />
        <input type="hidden" name="answerA" value="@ViewBag.AnswerA" />
        <input type="hidden" name="answerB" value="@ViewBag.AnswerB" />
        <input type="hidden" name="answerC" value="@ViewBag.AnswerC" />
        <input type="hidden" name="answerD" value="@ViewBag.AnswerD" />
        <input type="hidden" name="correctAnswer" value="@ViewBag.CorrectAnswer" />
        <input type="hidden" name="correctAnswerString" value="@ViewBag.CorrectAnswerString" />


        <input type="hidden" name="path" value="1" />
            <input type="radio" name="answer" value="a" /><strong>A)</strong> @ViewBag.AnswerA

        <p></p>
            
            <input type="radio" name="answer" value="b" /><strong>B)</strong> @ViewBag.AnswerB
            
        <P></P>
            
            <input type="radio" name="answer" value="c" /><strong>C)</strong> @ViewBag.AnswerC
            
        <p></p>
            
            <input type="radio" name="answer" value="d" /><strong>D)</strong> @ViewBag.AnswerD
            
        <p></p>
            <button type="submit" class="Opp-Button">Answer</button>
    }

    </div>


}

